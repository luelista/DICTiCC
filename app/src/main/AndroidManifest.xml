    <uses-sdk android:minSdkVersion="9" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <activity
            android:name=".SearchActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.AppCompat.Light">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DebugActivity"
            android:label="!!! D E B U G !!!" />
        <activity
            android:name=".DictionarySelectActivity"
            android:parentActivityName=".SearchActivity"
            android:label="@string/select_dictionary"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PrefsActivity"
            android:parentActivityName=".SearchActivity"
            android:theme="@style/Theme.AppCompat.Light"
            android:label="@string/settings" />
        <activity
            android:name=".DictionaryImportActivity"
            android:label="@string/import_dictionary"
            android:theme="@style/Theme.AppCompat.Light"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AboutScreenActivity"
            android:label="@string/help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DownloadFrameActivity"
            android:label="@string/download_dictionaries" />
        <activity
            android:name=".DictRequestActivity"
            android:label="@string/title_activity_dict_request"
            android:parentActivityName=".SearchActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="de.wikilab.dicticc.SearchActivity" />
        </activity>
    </application>

